<Page x:Class="PuntoDeVenta.Views.CRUDProductos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PuntoDeVenta.Views" xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
      mc:Ignorable="d" 
      d:DesignHeight="565" 
      d:DesignWidth="925"
      FontSize="18"
      Background="Transparent"
      Title="CRUDProductos">

    <Border Background="Transparent"
            CornerRadius="10">
        <Grid>
            <!-- #REGION COLS & ROWS -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <!-- #ENDREGION -->
            <!-- #REGION TITULO -->
            <TextBlock x:Name="Titulo"
                       Text="Creación de Usuarios"
                       Grid.Column="1"
                       Grid.Row="1"
                       Grid.ColumnSpan="5"
                       FontSize="30"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <!-- #ENDREGION -->
            <!-- #REGION BOTONES -->
            <!-- #REGION REGRESAR -->
            <Button x:Name="BtnRegresar"
                    Content="Regresar"
                    Grid.Column="1"
                    Grid.Row="2"
                    Width="100"
                    Cursor="Hand"
                    Style="{DynamicResource BtnStyle}"
                    Click="BtnRegresar_Click"/>
            <!-- #ENDREGION -->
            <!-- #REGION CREAR -->
            <Button x:Name="BtnCrear"
                    Content="Crear"
                    Grid.Row="20"
                    Grid.Column="5"
                    Width="100"
                    Cursor="Hand"
                    Style="{DynamicResource BtnStyle}"
                    Visibility="Hidden"
                    Click="BtnCrear_Click"/>
            <!-- #ENDREGION -->
            <!-- #REGION ELIMINAR -->
            <Button x:Name="BtnEliminar"
                    Content="Eliminar"
                    Grid.Row="20"
                    Grid.Column="5"
                    Width="100"
                    Cursor="Hand"
                    Style="{DynamicResource BtnStyle}"
                    Visibility="Hidden"
                    Click="BtnEliminar_Click"/>
            <!-- #ENDREGION -->
            <!-- #REGION MODIFICAR -->
            <Button x:Name="BtnModificar"
                    Content="Modificar"
                    Grid.Row="20"
                    Grid.Column="5"
                    Width="100"
                    Cursor="Hand"
                    Style="{DynamicResource BtnStyle}"
                    Visibility="Hidden"
                    Click="BtnModificar_Click"/>
            <!-- #ENDREGION -->
            <!-- #ENDREGION -->
            <!-- #REGION CONTENIDO -->
            <TextBlock Grid.Row="4"
                       Grid.Column="1"
                       Text="Nombre:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="4"
                     Grid.Column="2"
                     x:Name="tbNombre" 
                     HorizontalContentAlignment="Center"
                     Style="{DynamicResource TextBoxStyle}"/>
            <TextBlock Grid.Row="6"
                       Grid.Column="1"
                       Text="Código:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="6"
                     Grid.Column="2"
                     x:Name="tbCodigo"
                     HorizontalContentAlignment="Center"
                     Style="{DynamicResource TextBoxStyle}"/>
            <TextBlock Grid.Row="8"
                       Grid.Column="1"
                       Text="Precio:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="8"
                     Grid.Column="2"
                     x:Name="tbPrecio"
                     HorizontalContentAlignment="Center"
                     Style="{DynamicResource TextBoxStyle}"/>
            <TextBlock Grid.Row="10"
                       Grid.Column="1"
                       Text="Activo:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
            <CheckBox Grid.Row="10"
                     Grid.Column="2"
                     x:Name="tbActivo"
                     Width="50"
                     Cursor="Hand"
                     HorizontalAlignment="Left"/>
            <TextBlock Grid.Row="12"
                       Grid.Column="1"
                       Text="Cantidad:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="12"
                     Grid.Column="2"
                     x:Name="tbCantidad"
                     HorizontalContentAlignment="Center"
                     Style="{DynamicResource TextBoxStyle}"/>
            <TextBlock Grid.Row="14"
                       Grid.Column="1"
                       Text="Unidad de Medida:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="14"
                     Grid.Column="2"
                     x:Name="tbUnidadMedida"
                     HorizontalContentAlignment="Center"
                     Style="{DynamicResource TextBoxStyle}"/>
            <TextBlock Grid.Row="18"
                       Grid.Column="1"
                       Text="Descripción:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="18"
                     Grid.Column="2"
                     Grid.ColumnSpan="3"
                     Grid.RowSpan="3"
                     x:Name="tbDescripcion"
                     HorizontalContentAlignment="Center"
                     Style="{DynamicResource TextBoxStyle}"/>
            <TextBlock Grid.Row="16"
                       Grid.Column="1"
                       Text="Grupo:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
            <ComboBox Grid.Row="16"
                      Grid.Column="2"
                      Cursor="Hand"
                      HorizontalContentAlignment="Center"
                      x:Name="cbGrupo" 
                      Style="{DynamicResource ComboBoxStyle}">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ComboBoxItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                                    <Border CornerRadius="5"
                                            SnapsToDevicePixels="True"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"></ContentPresenter>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter Property="Background" Value="#A3F7B5"></Setter>
                                            <Setter Property="BorderBrush" Value="#A3F7B5"></Setter>
                                        </Trigger>
                                        <Trigger Property="IsHighlighted" Value="False">
                                            <Setter Property="Foreground" Value="Black"></Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
            <Image Grid.Row="4"
                   Grid.Column="4"
                   Grid.RowSpan="9"
                   Grid.ColumnSpan="2"
                   x:Name="imagen"
                   Source="../src/img/user.png"/>
            <Button Grid.Column="4"
                    Grid.Row="14"
                    Grid.ColumnSpan="2"
                    Width="140"
                    Content="Cambiar Imágen"
                    Background="#40C9A2"
                    x:Name="BtnCambiarImagen"
                    Cursor="Hand"
                    Click="BtnCambiarImagen_Click"
                    Style="{DynamicResource BtnStyle}"/>
            <!-- #ENDREGION -->
        </Grid>
    </Border>

</Page>
